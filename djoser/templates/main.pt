<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.0 Transitional//EN">
<html>
  <head>
    <div metal:define-slot="title"></div>
    <link rel="shortcut icon" href="/favicon.ico"/>
    <link rel="stylesheet" href="/static/djoser.css" type="text/css" media="screen" charset="utf-8" />
    <!-- DJM TODO this should be a metal macro -->
    <link rel="stylesheet" type="text/css"
          href="${request.static_url('deform:static/css/form.css')}" />
     <script src="${request.static_url('deform:static/scripts/jquery-1.7.2.min.js')}"></script>
    <script src="${request.static_url('deform:static/scripts/deform.js')}"></script>
  </head>
  <body>
    <div id="wrapper">
      <div id="top-bar">
        <a href="/">
          <div class="icon">
            <img src="${request.static_url('d3:static/djoser_small.png')}" alt="[Dj3]" title="Dj3" />
          </div>
        </a>
        <a href="/">
          <div class="title-text inset-text">
            Djoser
          </div>
        </a>
        <div class="hieroglyphics">
          <img src="/static/cartouche.png" alt="" title="" />
          <img src="/static/hieroglyphics1.png" alt="" title="" />
          <img src="/static/hieroglyphics2.png" alt="" title="" />
        </div>
        <div class="account-info">
          <div class="current-user">${currentUser}</div>
          <a href="/logout">Logout</a>
        </div>
      </div>
      <div metal:define-slot="content"></div> <!-- content -->
      <div id="bottom-bar">
        <img src="/static/pyramid_powered.png" alt="" />
      </div >
    </div> <!-- wrapper -->
  </body>
</html>
