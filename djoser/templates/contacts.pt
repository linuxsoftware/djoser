<html metal:use-macro="load: main.pt">
    <title metal:fill-slot="title">Contacts</title>
    <metal:scripts metal:fill-slot="scripts">
		<style type="text/css" title="currentStyle">
			@import "/static/demo_page.css";
			@import "/static/demo_table.css";
		</style>
		<script type="text/javascript" language="javascript" src="/static/jquery.js"></script>
		<script type="text/javascript" language="javascript" src="/static/jquery.dataTables.js"></script>
		<script type="text/javascript" charset="utf-8">
			$(document).ready(function() {
				$('#contacts-table').dataTable();
			} );
		</script>
    </metal:scripts>
    
      <div metal:fill-slot="content" id="content">
        <div id="contacts">
          <div class="tool-bar">
            <a href="/contacts/@@add-contact" class="imglink">
              <button type="button">
                <img src="/static/add_contact_icon.png" alt="+" 
                title="Add a new contact" />
                Add Contact
              </button>
            </a>
            <a href="/contacts/@@delete-contact" class="imglink">
              <button type="button">
                <img src="/static/delete_contact_icon.png" alt="-" 
                title="Delete selected contacts" />
                Delete Contact
              </button>
            </a>
            <a href="/contacts/@@edit-contact" class="imglink">
              <button type="button">
                <img src="/static/edit_contact_icon.png" alt="edit"
                title="Edit selected contacts" />
                Edit Contact </button>
            </a>
          </div> <!-- tool-bar -->
          <div class="page-controls">
          </div> <!-- page-controls -->
          <div class="grid">
            <table id="contacts-table" class="data">
              <thead>
                <tr>
                  <th class="selector"></th>
                  <th tal:repeat="heading headings">${heading}</th>
                </tr>
              </thead>
              <tbody>
                <tr tal:repeat="row rows"
                  class="${'odd' if repeat.row.even else 'even'}">
                  <tal:data tal:repeat="data row">
                  <td tal:condition="repeat.data.start" class="selector">
                    <input type="checkbox" name="select-${data}" value="" />
                  </td>
                  <td tal:condition="not repeat.data.start">${data}</td>
                  </tal:data>
                </tr>
              </tbody>
            </table>
          </div> <!-- grid -->
        </div>
      </div>
</html>
